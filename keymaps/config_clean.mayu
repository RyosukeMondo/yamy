mod mod4 = !!_1					# Hold 1 for mod4
mod mod0 = !!B					# Hold B for mod0 (for testing B + W → 1)
mod Alt += F4					# F4 acts as Alt (standard modifier - works)
mod mod1 = !!V					# Hold V for mod1
mod Alt += Hiragana				# Hiragana acts as Alt (standard modifier - works)
mod Win += F1					# F1 acts as Win (standard modifier - works)
mod mod8 = !!R					# Hold R for mod8
mod Shift += F2					# F2 acts as Shift (standard modifier - works)
mod Ctrl += F3					# F3 acts as Ctrl (standard modifier - works)
mod mod7 = !!T					# Hold T for mod7
mod mod2 = !!X					# Hold X for mod2
mod mod3 = !!C					# Hold C for mod3
mod Ctrl += LWin				# LWin acts as Ctrl (standard modifier - works)
mod mod5 = !!N					# Hold N for mod5
mod mod6 = !!M					# Hold M for mod6

