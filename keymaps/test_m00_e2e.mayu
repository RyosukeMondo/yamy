# E2E Test Configuration for M00-MFF Virtual Modifiers
# NEW system: 256 modal modifiers with hex notation

include "109_clean.mayu"

#=============================================================================
# M00 Virtual Modifier (mapped to B key)
#=============================================================================
# Physical key B → M00 virtual modifier (0xF000)
def subst *B = *M00

# M00 tap action: Quick tap of B outputs Enter
mod assign M00 = *Enter

# M00 modifier mappings: Hold B + other keys
key M00-*A = *_1      # B+A → 1
key M00-*S = *_2      # B+S → 2
key M00-*D = *_3      # B+D → 3
key M00-*F = *_4      # B+F → 4
key M00-*Q = *F1      # B+Q → F1
key M00-*W = *F2      # B+W → F2
key M00-*E = *F3      # B+E → F3
key M00-*R = *F4      # B+R → F4

#=============================================================================
# M01 Virtual Modifier (mapped to V key)
#=============================================================================
def subst *V = *M01

# M01 tap action: Quick tap of V outputs Backspace
mod assign M01 = *BackSpace

# M01 modifier mappings: Hold V + other keys
key M01-*A = *Left    # V+A → Left arrow
key M01-*S = *Down    # V+S → Down arrow
key M01-*D = *Up      # V+D → Up arrow
key M01-*F = *Right   # V+F → Right arrow
key M01-*Q = *Home    # V+Q → Home
key M01-*W = *End     # V+W → End
key M01-*E = *PageUp  # V+E → PageUp
key M01-*R = *PageDown # V+R → PageDown

#=============================================================================
# M02 Virtual Modifier (mapped to N key)
#=============================================================================
def subst *N = *M02

# M02 tap action: Quick tap of N outputs Space
mod assign M02 = *Space

# M02 modifier mappings: Hold N + other keys
key M02-*A = *_7      # N+A → 7
key M02-*S = *_8      # N+S → 8
key M02-*D = *_9      # N+D → 9
key M02-*F = *_0      # N+F → 0

#=============================================================================
# Combinations with standard modifiers
#=============================================================================
# M00 + Shift combinations
key M00-S-*A = *F5    # B+Shift+A → F5
key M00-S-*S = *F6    # B+Shift+S → F6

# M01 + Ctrl combinations
key M01-C-*A = *F7    # V+Ctrl+A → F7
key M01-C-*S = *F8    # V+Ctrl+S → F8
